
<% semantic_form_for @user do |f| %>

    <% f.inputs do%>
      <%= f.input :email, :label => "Email" %>
      <%= f.input :username, :label => "Usuario" %>
      <%= f.input :name, :label => "Nombre" %>
      <%= f.input :institucion, :label => "Institución" %>

      <%= f.input :country, :label=>"País"%>
      <%= f.input :ifi, :label=>"IFI",:required=>false%>
      <%= f.input :ispublic, :label=>"Usuario Externo"%>
       
      <%= f.input :tipo, :label=>"cambio o bcie", :required=>false%>
    <%end%>

    <%= f.buttons %>
<%end%>
 