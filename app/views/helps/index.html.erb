<% title "Helps" %>

<table>
  <tr>
    <th>Code</th>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% for help in @helps %>
    <tr>
      <td><%=h help.code %></td>
      <td><%=h help.title %></td>
      <td><%=h help.description %></td>
      <td><%= link_to "Show", help %></td>
      <td><%= link_to "Edit", edit_help_path(help) %></td>
      <td><%= link_to "Destroy", help, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Help", new_help_path %></p>
