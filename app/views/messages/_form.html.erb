<% form_for @message do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label "Nombre" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label "País" %><br />
    <%= f.text_field :country %>
  </p>
  <p>
    <%= f.label "Correo Electrónico" %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label "Describa la Lección Aprendida con detalles" %><br />
    <%= f.text_area :content %>
  </p>
  <p><%= f.submit "Enviar Lección" %></p>
<% end %>
