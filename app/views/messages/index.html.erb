<% title "Messages" %>

<table>
  <tr>
    <th>Name</th>
    <th>Country</th>
    <th>Email</th>
    <th>Content</th>
  </tr>
  <% for message in @messages %>
    <tr>
      <td><%=h message.name %></td>
      <td><%=h message.country %></td>
      <td><%=h message.email %></td>
      <td><%=h message.content %></td>
      <td><%= link_to "Show", message %></td>
      <td><%= link_to "Edit", edit_message_path(message) %></td>
      <td><%= link_to "Destroy", message, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Message", new_message_path %></p>
